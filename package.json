{
  "name": "my-ecommerce-app",
  "version": "1.0.0",
  "description": "MERN stack e-commerce application",
  "main": "server.js",
  "scripts": {
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "client": "cd frontend && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/physixkz/startupecommerce"
  },
  "keywords": [
    "MERN",
    "ecommerce",
    "react",
    "express",
    "mongodb"
  ],
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
